{
  "config": {
    "target": "https://group-up-backend.herokuapp.com",
    "phases": [
      {
        "duration": 60,
        "arrivalRate": 5
      },
      {
        "duration": 120,
        "arrivalRate": 5,
        "rampTo": 50
      },
      {
        "duration": 30,
        "arrivalRate": 100
      }
    ],
    "processor": "./load-test-create-user.js"
  },
  "scenarios": [
    {
      "name": "Create Users",
      "flow": [
        {
          "function": "create"
        },
        {
          "post": {
            "url": "/signup",
            "json": {
              "username": "{{ username }}",
              "email": "{{ email }}",
              "passwordHash": "{{ passwordHash }}",
              "tokenSeed": "{{ tokenSeed }}"
            },
            "capture": {
              "json": "$.token",
              "as": "token"
            }
          }
        }
      ]
    }
  ]
}